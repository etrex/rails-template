<% set_meta_tags title: "關於我", reverse: true, canonical: about_url %>

<h1 class="text-center mb-5">關於我</h1>
<p><%= 關於我 %></p>

<!-- Contact Us Section -->
<h2 class="mt-3 mb-3">與我聯絡</h2>
<div>
  <%= form_with url: '/contact_request', method: :post, data: {turbo: false} do |form| %>
    <div class="mb-3">
      <%= form.label :nickname, "暱稱", class: "form-label" %>
      <%= form.text_field :nickname, class: "form-control", placeholder: "該怎麼稱呼您？", required: true %>
    </div>
    <div class="mb-3">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "您的電子信箱？", required: true %>
    </div>
    <div class="mb-3">
      <%= form.label :message, "想跟我說什麼呢？", class: "form-label" %>
      <%= form.text_area :message, class: "form-control", rows: "4", placeholder: "在你完成留言後，我會盡快回覆", required: true %>
    </div>
    <%= form.submit "送出", class: "btn btn-primary" %>
  <% end %>
</div>
